<h1 align="center">Log in</h1> 


<%= form_with(url: login_path, local: true, scope: :session) do |form| %>
  <div class="form-group">
    <%= form.email_field :email, class: "form-control", placeholder: "Email"%>
  </div>

  <div class="form-group">
    <%= form.password_field :password, class: "form-control", placeholder: "Password"%>
  </div>

  <div class="actions">
    <%= form.submit "Log In", class: "btn btn-primary btn-lg"%>
  </div>
<% end %>